/* pages/shopcart.wxss */

.section {
  display: flex;
  flex-direction: column;
}

.cell {
  /* height: 100pt; */
  border-bottom: 0.5rpx solid #f0f0f0;
  margin-left: 15px;
  margin-right: 15px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.cell-check {
  width: 20px;
  height: 19px;
  margin-left: 0px;
  margin-right: 10px;
  
}

.cell-cover {
  width: 100px;
  height: 80px;
  margin-right: 15px;
}

.cell-introduce {
  display: flex;
  flex-direction: column;
  width: 64%;
  height: 100%;
  
}

.cell-title {
  color: #444;
  font: PingFangSC-Light;
  font-size: 15px;
  margin-top: 23px;
}

.cell-description {
  color: #999;
  font: PingFangSC-Light;
  font-size: 13px;
  margin-top: 5px;
}

.cell-bottom{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  height: 30px;
}

.cell-bottom-price {
  color: #c90b0b;
  font: PingFangSC-Light;
  font-size: 15px;
  margin-top: 5px;

}
.cell-bottom-amount{
 font: PingFangSC-Light;
 font-size: 13px;
 color: #999;
 margin-right: 0px; 
 
 display: flex;
 flex-direction: row;
 align-items: center;
 justify-content: center;
}
.cell-bottom-image{
  width: 20px;
  height: 20px;
}

.cell-bottom-input{
  width: 40px;
  height: 20px;
  text-align: center;
  background: white;

}


.bottom {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0px;
  flex: 1;
  width: 100%;
  height: 50px;
  justify-content: space-between;
}

.bottom-amount {
  background: #f4f4f4;
  width: 70%;
  font: PingFangSC-Light;
  font-size: 15px;
  color: #444;
  text-align: right;
  line-height: 50px;
  justify-content: center;
}

.bottom-amount-text {
  color: #c90b0b;
  font-size: 15px;
  font: PingFangSC-Light;
  margin-right: 10px;

}

.bottom-settlement {
  background: #ceaf6c;
  width: 30%;
  font: PingFangSC-Light;
  font-size: 15px;
  color: white;
  text-align: center;
  line-height: 50px;
  justify-content: center;
}

.no-order{
  display: flex;
  /* flex-direction: column; */
  justify-content: center;
  align-items: center;
}
.no-order-text{
  margin-top: 200px;
  color: #999;
}

