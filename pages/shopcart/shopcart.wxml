<!--pages/shopcart.wxml-->
<view class='section'>

  <view class='cell' wx:for='{{orderList}}' wx:key='a'>
    <image class='cell-check' src='{{checkItemList[index]}}' bindtap='checkItem' data-index='{{index}}'></image>
    <image class='cell-cover' src='{{item.coverUrl}}'></image>
    <view class='cell-introduce'>
      <view class='cell-title'>{{item.name}}</view>
      <view class='cell-description'>净含量：{{item.netContent}}</view>
      <view class='cell-bottom'>
        <view class='cell-bottom-price'>¥{{item.price}}</view>
        <view class='cell-bottom-amount'>
          <image  class='cell-bottom-image' src='../images/gwc_minus.png' mode='aspectFit'  mode='aspectFit' bindtap='bindTapMinus' data-index='{{index}}'></image>
          <input class='cell-bottom-input' value='{{item.amount}}' bindconfirm='modifyOrderAmount' data-index='{{index}}'></input>
          <image class='cell-bottom-image' src='../images/gwc_plus.png' mode='aspectFit' bindtap='bindTapPlus' data-index='{{index}}'></image>
        </view>
      </view>
    </view>

  </view>

<view style='height:50px'></view>


</view>

<block wx:if='{{ orderList.length == 0}}'>
  <view class='no-order'>
    <text class='no-order-text'> 空空如也～快去选购产品吧！</text>
  </view>
</block>

<view class='bottom'>
  <view class='bottom-amount'>合计
    <text class='bottom-amount-text'> ￥{{totalFee}} </text>
  </view>
  <view class='bottom-settlement' bindtap='clickSettlement'>结算</view>
</view>