/**index.wxss**/

.section {
  display: flex;
  flex-direction: column;
  background: white;
  width: 100%;
  height: 100%;
}

.flex-top {
  display: flex;
  height: 40px;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0px 0px 1px 1px #e4e4e4;
  background: white;
  margin: 1px;
}

.top-item {
  font-size: 14px;
  text-align: center;
  width: 55px;
  height: 50px;
  line-height: 50px;
}

.top-line {
  background: #c49a27;
  height: 2px;
  align-items: center;
  justify-content: center;
  margin-left: 1px;
  margin-right: 1px;
  border-radius: 1px;
  margin-top: -7px;
}

.flex-wrp {
  display: flex;

}

.flex-item {
  width: 50%;
  flex-direction: row;
  background: white;
}

.singal-item {
  height: 100%;
  margin-left: 5px;
  margin-right: 5px;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  text-align: center;
  background: white;
  overflow: hidden;text-overflow:ellipsis;

}

.image_frame {
  margin: 0 auto;
  width: 95%;
   height: 100px;  
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 5px;

}

.breif-text {
  background: #f0ece1;
  font-size: 12px;
  height: 33px;
  text-align: left;
  margin-left: 5px;
  margin-right: 5px;
  color: #a58747;
  text-indent: 5px;
}

.product-text {
  /* margin: 0 auto; */
  color: #333;
  font-size: 15px;
  text-align: left;
  margin-left: 5px;
  margin-right: 5px;
  width: 95%;
   height: 30px;
  display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.product-price {
  color: #c90b0b;
  font-size: 14px;
  text-align: left;
  margin-left: 5px;
  margin-right: 5px;
  /* height: 30px; */

}

.shopcart-section {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 20px;
  flex: 1;
  width: 100%;
  height: 80px;
  justify-content: flex-end;
}

.shopcart-button {
  display: flex;
  flex-direction: row;
  width: 30px;
  height: 30px;
  background: #ceaf6c;
  margin-right: -15px;
  border-radius: 50%;
  box-shadow: 1px 1px 1px 1px lightgray;
  padding: 15px;
}

.shop-iconbadge {
  background: #c90b0b;
  color: white;
  width: 14px;
  height: 14px;
  margin-top: 5px;
  margin-right: 10px;
  font-size: 10px;
  border-radius: 50%;
  text-align: center;
  line-height: 12px;
}
