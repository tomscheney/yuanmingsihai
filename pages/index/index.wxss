}

.flex-item {
  width: 350rpx;
  height: 500rpx;
  font-size: 26rpx;
  margin: 0 auto;
  text-align: center;
  border-radius: 5px;
  flex-direction:row;
 }

.flex-item-V {
  margin: 0 auto;
  width: 350rpx;
  height: 480rpx;
  text-align: center;
  flex-direction:column;
  margin-bottom: 20rpx;
  display: flex;
}

.bc_green {
  background-color: green;
  box-shadow:6rpx 6rpx 6rpx 6rpx lightgray;
  border-radius: 5px;
  margin-bottom: 20rpx;
  border: 2rpx solid lightgray;

}

.product-text {
  position: relative;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 36rpx;
} 

.image_frame {
  width: auto;
  height: 600rpx;
  border-radius: 5px;
  margin-bottom: 10rpx;
}


.flex-top {
  display: flex;
  height: 40px;
  align-items: center; 
  justify-content: space-around;
  box-shadow: 0px 0px 1px 1px #E4E4E4;
  background: white;
  margin: 1px;
}

.top-item {
  font-size: 14px;
  text-align: center;
  width: 50px;
  height: 36px;
  line-height: 38px;
}
.top-line{
  background: #C49A27; 
  height: 2px;
  align-items: center; 
  justify-content: center;
  margin-left: 1px;
  margin-right: 1px;
  border-radius: 1px;
  margin-top: -2px;
}
