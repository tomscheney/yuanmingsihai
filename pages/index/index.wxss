/**index.wxss**/

.section{
  display: flex;
  flex-direction: column;
  background: white;
  width: 100%;
  height: 100%;
}

.flex-wrp {
  display: flex;
  /* justify-content: flex-start; */
  /* align-items: flex-start; */
  background: white;
}

.flex-item {
  width: 50%;
  height: 200px;
  flex-direction: row;
  background: white;
  
  /* background: rebeccapurple;   */
}

.singal-item{
  margin-left: 5px;
  margin-right: 5px;
  display: flex;
  flex-direction: column;
   background: white; 
  /* margin-top: 10px; */
  text-align: center;
  height: 350rpx;
}

.image_frame {
  width: auto;  
  /* height: 400px; */
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 5px;
}

.flex-top {
  display: flex;
  height: 40px;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0px 0px 1px 1px #e4e4e4;
  background: white;
  margin: 1px;
  margin-bottom: 10px;
}

.top-item {
  font-size: 14px;
  text-align: center;
  width: 50px;
  height: 36px;
  line-height: 38px;
}

.top-line {
  background: #c49a27;
  height: 2px;
  align-items: center;
  justify-content: center;
  margin-left: 1px;
  margin-right: 1px;
  border-radius: 1px;
  margin-top: -2px;
}

.breif-text {
  background: #f0ece1;
  font-size: 12px;
  height: 33px;
  text-align: left;
  margin-left: 5px;
  margin-right: 5px;
  color: #a58747;
  text-indent: 5px;
}

.product-text {
  color: #333;
  font-size: 15px;
  text-align: left;
  margin-left: 5px;
  margin-right: 5px;
}

.product-price {
  color: #c90b0b;
  font-size: 14px;
  text-align: left;
  margin-left: 5px;
  margin-right: 5px;
}

.shopcart-section {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 20px;
  flex: 1;
  width: 100%;
  height: 80px;
  justify-content: flex-end;
}

.shopcart-button {
  display: flex;
  flex-direction: row; 
  width: 25px;
  height: 25px;
  background: #CEAF6C;
  margin-right: -10px;
  border-radius: 50%;
  box-shadow: 1px 1px 1px 1px lightgray; 
  padding: 10px;
}

.shop-iconbadge{
  background: #C90B0B;
  color: white;
  width: 18px;
  height: 18px;
  margin-top: 5px;
  margin-right: 20px;
  font-size: 10px;
  border-radius: 50%;
  text-align: center;
  line-height: 14px;
  
}