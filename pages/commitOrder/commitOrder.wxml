<!--pages/commitOrder.wxml-->

<view class='section'>
  <view class='cell'>
    <image class='cell-cover' src='http://bmob-cdn-15679.b0.upaiyun.com/2018/01/14/8a9cb752402bd61f801de5c9a467e738.png'></image>
    <view class='cell-introduce'>
      <view class='cell-title'>雨前A级西湖龙井 100克</view>
      <view class='cell-description'>净含量：100克</view>
      <view class='cell-price'>¥1000</view>
    </view>
  </view>

  <view class='contact'>
    <view class='contact-cell' wx:for="{{[{head:'姓名',tail:'填写您的姓名'},{head:'电话',tail:'请填写收货人手机号码'},{head:'地址',tail:'请填写收货地址'}]}}" wx:key='a'>
      <view class='contact-cell-head'>{{item.head}}</view>
      <input class='contact-cell-tail' placeholder='{{item.tail}}' placeholder-class="phcolor">{{item.tail}}</input>
    </view>

    <view class='pay-title'> 选择付款方式 </view>
    <view class='section' wx:for="{{['礼品卡支付','微信支付']}}" wx:key='a'>
      <view class='pay-cell' data-index='{{index}}' bindtap='bindPayTap'>
        <view class='pay-mothod'>{{item}}</view>
        <image class='pay-icon' src='{{paymethod[index]}}' mode='aspectFit'></image>
        <text class='pay-balance' wx:if='{{index == 0}}'>扫描礼品卡二维码抵现</text>
        <image class='pay-tail' src='../images/dd_fh@2x.png' mode='aspectFit'></image>
      </view>
      </view>
    </view>

  </view>

  <view class='bottom'>
    <view class='bottom-amount' bindtap='addToshopCart'>合计
      <text class='bottom-amount-text'> ￥{{'10000'}} </text>
    </view>
    <view class='bottom-settlement' bindtap='immediateBuy'>提交订单</view>
  </view>