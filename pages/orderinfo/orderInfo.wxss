/* pages/orderinfo/orderInfo.wxss */

@import '../../style/weui.wxss'


.section {
  display: flex;
  flex-direction: column;
 width: 100%;
 background: white;
}

.product-image {
  display: flex;
  background: white;
  margin-left: 0px;
  margin-right: 0px;
  margin-top: 0px;
  height: 200px;
  justify-content: center;
  align-items: center;
}

.product-image-frame {
  width: 100%;
  height: 100%;
  margin-left: 0px;
  margin-right: 0px;
}

.product-detail {
  flex-direction: column;
  display: flex;
  height: 60px;
  margin-left: 15px;
  margin-right: 15px;
  background: white;
  margin-top: 15px;
}

.product-name {
  width: 100%;
  color: #444;
  font-size: 18px;
  font: PingFangSC-Regular;
  margin-right: 15px;

}

.product-price {
width: 100%;
margin-right: 15px;
  color: #c90b0b;
  font-size: 20px;
  font: PingFangSC-Medium;
}

.introduce {
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}

.introduce-title {
  color: #444;
  font: FZQKBYSJW--GB1-0;
  font-size: 18px;
  text-align: center;
  margin-right: 15px;
  margin-bottom: 15px;
}

.introduce-cell {
  display: flex;
  flex-direction: row;
  border-bottom: 0.5rpx solid #f0f0f0;
  width: 100%;
  line-height: 35px;
}

.cell-head {
  color: #999;
  /* margin-left: 0px; */
  width: 70px;
  height: 35px;
  font-size: 14px;
  font: PingFangSC-Light;
  white-space: nowrap;
}

.cell-tail {
  color: #333;
  font: PingFangSC-Light;
  font-size: 14px;
  text-justify: inter-ideograph;
  text-align: justify;
  margin-left: 5px;
  display: flex;
  width: 80%;
}

.detail {
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 35px;
  justify-content: center;
  align-items: center;
  display: felx;
  flex-direction: column;
  margin-bottom: 80px;
  box-sizing: border-box;
  overflow: hidden;
}

.detail-image {
  width: 100%;
  /* height: 100%; */
   /* margin: 0 auto;  */
   
}

.detail-text {
  margin-top: 30px;
  justify-content: center;
  align-items: center;
  display: felx;
  flex-direction: column;
  width: 100%;
  height: 30px;
}

.detail-text-title {
  color: #a58747;
  font-size: 18px;
  font: FZQKBYSJW--GB1-0;
  margin-left: 0px;
  margin-right: 0px;
  width: 100%;
  text-align: center;
}

.detail-text-content {
  color: #444;
  font-size: 13px;
  font: FZQKBYSJW--GB1-0;
  width: 100%;
  text-align: center;
}

.detail-bottom-image {
  width: 100%;
  margin-top: 50px;
  height: 300px;
}

.detail-bottom-motto {
  font: FZQingKeBenYueSongS-R-GB;
  font-size: 15px;
  color: #333;
  text-align: center;
  width: 100%;
  margin-top: 30px;
}

.shopcart-section {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0px;
  flex: 1;
  width: 100%;
  height: 50px;
  justify-content: space-between;
}

.shopcart-addButton {
  background: #f4f4f4;
  width: 50%;
  font: PingFangSC-Light;
  font-size: 15px;
  color: #444;
  text-align: center;
  line-height: 50px;
  justify-content: center;
}

.shopcart-buy {
  background: #ceaf6c;
  width: 50%;
  font: PingFangSC-Light;
  font-size: 15px;
  color: white;
  text-align: center;
  line-height: 50px;
  justify-content: center;
}
