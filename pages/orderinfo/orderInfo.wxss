/* pages/orderinfo/orderInfo.wxss */
@import "../../style/weui.wxss"

.product-image {
  display: flex;
  background: #f4f4f4;
  margin-left: 0px;
  margin-right: 0px;
  margin-top: 0px;
  height: 300px;
  justify-content: center;
  align-items: center;
}

.product-image-frame {
  width: 100%;
  height: 100%;
  margin-left: 15px;
  margin-right: 15px;
}

.product-detail {
  width: 100%;
  height: 100%;
  margin-left: 15px;
  margin-right: 15px;
  flex-direction: column;
  display: flex;
}

.product-name {
  color: #444;
  font-size: 18px;
  font: PingFangSC-Regular;
}

.product-price {
  color: #c90b0b;
  font-size: 20px;
  font: PingFangSC-Medium;
}

.introduce {

  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}

.introduce-title {
  color: #444;
  font: FZQKBYSJW--GB1-0;
  font-size: 18px;
  text-align: center;
  margin-right: 15px;
}

.introduce-cell{
  display: flex;
  flex-direction: row;
  border-bottom: 0.5rpx solid #F0F0F0;
  width: 100%;
  margin-top: 15px;
}

.cell-head{
  color: #999999;
  margin-left: 0px;
  width: 80px;
  font-size: 14px;
  font: PingFangSC-Light;
}
.cell-tail{
  color: #333333;
  font: PingFangSC-Light;
  font-size: 14px;
}